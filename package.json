{
  "name": "kriptotek",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:frontend": "vite --open",
    "dev:backend": "npm start --prefix server",
    "dev:wait": "npx wait-on http://localhost:3000/health -t 30000",
    "dev:wait-frontend": "npx npm-run-all --serial dev:wait dev:frontend",
    "dev:all": "concurrently -k -s first -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:wait-frontend\"",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext jsx,js --report-unused-disable-directives --max-warnings 0",
    "start:heroku": "npm start --prefix server",
    "heroku-postbuild": "npm run build",
    "postinstall": "npm install --prefix server"
  },
  "dependencies": {
    "apexcharts": "^5.3.6",
    "firebase": "^10.14.1",
    "lightweight-charts": "^5.0.9",
    "lucide-react": "^0.471.0",
    "react": "^18.3.1",
    "react-apexcharts": "^1.8.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "recharts": "^3.4.1",
    "terser": "^5.36.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^6.0.0"
  }
}
